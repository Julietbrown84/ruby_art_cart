<h1>Welcome</h1>
<h1>Art Cart</h1>

<ul id="products">
  <% @products.each do |product| %>
    <li>
      <strong><%= product.name %></strong>
      <%= simple_format(product.description) %>
      <em><%= product.price %></em>
      <br />
      <%= link_to "Details", product_path(product) %>
    </li>
  <% end %>
</ul>
